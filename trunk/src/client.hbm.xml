<?xml version="1.0" encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.jumbohome.server.clientmanager.models.Client" table="clients">
        <id name="clientId" type="int" column="client_id">
            <generator class="increment"/>
        </id>

        <property name="name">
            <column name="name"/>
        </property>
        <property name="email">
            <column name="email"/>
        </property>
        <property name="phone">
            <column name="phone"/>
        </property>
        <property name="address">
            <column name="address"/>
        </property>
        <property name="employment">
            <column name="employment"/>
        </property>
        <property name="isActive">
            <column name="is_active"/>
        </property>
        
    </class>
</hibernate-mapping>
